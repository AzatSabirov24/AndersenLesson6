<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_default"
    android:focusable="true"
    android:clickable="true"
    tools:context=".ContactDetailFragment">

    <ImageView
        android:id="@+id/iv_image_detail"
        android:layout_width="@dimen/width_contact_image_detail"
        android:layout_height="@dimen/height_contact_image_detail"
        android:layout_margin="@dimen/margin_card_view"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_card_view"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_tv_name" />

    <TextView
        android:id="@+id/tv_surname_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_card_view"
        android:text="TextView"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/text_size_detail_default" />

    <TextView
        android:id="@+id/tv_phone_number_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_card_view"
        android:text="TextView"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_detail_default" />
</LinearLayout>